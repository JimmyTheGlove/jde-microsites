---
/**
 * Expert Card Component
 * Displays expert/team member profile
 * Props:
 * - name: string - Expert's name
 * - title: string - Expert's title/role
 * - bio: string - Expert's biography
 * - image: string (optional) - Expert's photo URL
 * - email: string (optional) - Expert's email
 * - phone: string (optional) - Expert's phone number
 * - backgroundColor: string (optional) - Background color class (default: 'bg-gray-50')
 */

const {
  name,
  title,
  bio,
  image,
  email,
  phone,
  backgroundColor = 'bg-gray-50'
} = Astro.props;
---

<section class={`${backgroundColor} py-16 md:py-24`}>
  <div class="container-custom">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-8 text-center">
        Meet Our Expert
      </h2>

      <div class="bg-white rounded-lg shadow-lg overflow-hidden">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 p-8">
          {image && (
            <div class="md:col-span-1 flex justify-center items-start">
              <img
                src={image}
                alt={name}
                class="w-48 h-48 rounded-full object-cover shadow-md"
              />
            </div>
          )}

          <div class={image ? 'md:col-span-2' : 'md:col-span-3'}>
            <h3 class="text-2xl font-bold text-gray-900 mb-2">
              {name}
            </h3>
            <p class="text-lg text-primary-600 font-semibold mb-4">
              {title}
            </p>
            <div class="prose prose-lg text-gray-600 mb-6">
              <p>{bio}</p>
            </div>

            {(email || phone) && (
              <div class="flex flex-col gap-3 pt-4 border-t border-gray-200">
                {email && (
                  <div class="flex items-center gap-3">
                    <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                    <a href={`mailto:${email}`} class="text-primary-600 hover:text-primary-700 font-medium">
                      {email}
                    </a>
                  </div>
                )}
                {phone && (
                  <div class="flex items-center gap-3">
                    <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                    <a href={`tel:${phone}`} class="text-primary-600 hover:text-primary-700 font-medium">
                      {phone}
                    </a>
                  </div>
                )}
              </div>
            )}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
