---
/**
 * Team Section Component
 * Displays team members in a grid
 * Props:
 * - title: string (optional) - Section title
 * - description: string (optional) - Section description
 * - teamMembers: Array<{
 *     name: string,
 *     role: string,
 *     bio: string (optional),
 *     image: string (optional),
 *     social: Array<{platform: string, url: string}> (optional)
 *   }> - Array of team members
 */

const { title, description, teamMembers = [] } = Astro.props;
---

<section class="bg-white section-padding">
  <div class="container-custom">
    {(title || description) && (
      <div class="text-center max-w-3xl mx-auto mb-16">
        {title && (
          <h2 class="text-gray-900 mb-4">{title}</h2>
        )}
        {description && (
          <p class="text-gray-600 text-lg">{description}</p>
        )}
      </div>
    )}

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12">
      {teamMembers.map(member => (
        <div class="text-center">
          {/* Team Member Image */}
          <div class="mb-4">
            {member.image ? (
              <img
                src={member.image}
                alt={member.name}
                class="w-48 h-48 rounded-full mx-auto object-cover shadow-lg"
              />
            ) : (
              <div class="w-48 h-48 rounded-full mx-auto bg-gradient-to-br from-primary-400 to-primary-600 flex items-center justify-center shadow-lg">
                <span class="text-white text-5xl font-bold">
                  {member.name.charAt(0)}
                </span>
              </div>
            )}
          </div>

          {/* Team Member Info */}
          <h3 class="text-2xl font-bold text-gray-900 mb-1">
            {member.name}
          </h3>

          <p class="text-primary-600 font-semibold mb-3">
            {member.role}
          </p>

          {member.bio && (
            <p class="text-gray-600 mb-4">
              {member.bio}
            </p>
          )}

          {/* Social Links */}
          {member.social && member.social.length > 0 && (
            <div class="flex justify-center space-x-4">
              {member.social.map(link => (
                <a
                  href={link.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-gray-400 hover:text-primary-600 transition-colors duration-200"
                  aria-label={`${member.name} on ${link.platform}`}
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    {link.platform === 'linkedin' && (
                      <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                    )}
                    {link.platform === 'twitter' && (
                      <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                    )}
                    {link.platform === 'email' && (
                      <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
                    )}
                  </svg>
                </a>
              ))}
            </div>
          )}
        </div>
      ))}
    </div>
  </div>
</section>
